{
	"env": {
		"commonjs": true,
		"es2021": true,
		"node": true
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": "latest"
	},
	"rules": {
		"no-empty": "off",
		"indent": ["warn", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "backtick"],
		"semi": ["error", "always"],
		"no-unused-vars": "warn"
	}
}
