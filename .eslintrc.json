{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "prettier"],
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "no-empty": "off",
    "indent": ["warn", 2, { "SwitchCase": 1 }],

    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "backtick"],
    "semi": ["error", "always"],
    "no-unused-vars": "warn"
  }
}
